<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="default" namespace="/" extends="struts-default">
		<action name="action_*"
			class="cn.edu.bitzh.tp.action.ActionTest" method="{1}">
			<result type="redirect" name="success">
				<param name="location">/index.jsp</param>
			</result>
			<!-- 重点！Struts2.5使用通配符调用方法时，内部会验证是否允许访问该方法 ，注：可使用正则表达式 -->
			<allowed-methods>test</allowed-methods>
		</action>
	</package>
	<package name="json-api" namespace="/" extends="json-default">
		<action name="region_*"
			class="cn.edu.bitzh.tp.action.RegionAction" method="{1}">
			<result type="json" />
			<allowed-methods>listChildren, listContinents, get</allowed-methods>
		</action>
		<action name="note_*" class="cn.edu.bitzh.tp.action.NoteAction"
			method="{1}">
			<result type="json" />
			<allowed-methods>get, insert, listLatestNotes, listHotestNotes</allowed-methods>
		</action>
        <action name="scenery_*" class="cn.edu.bitzh.tp.action.SceneryAction" method="{1}">
			<result type="redirect" name="success">
				<param name="location">/scenery/info2.jsp</param>
			</result>
			<allowed-methods>getSceneryDtl, getSceneryList, publishScenery</allowed-methods>
		</action>
	</package>
	
	<package name="produce_request" namespace="/" extends="json-default">
		<action name="produce_request" class="cn.edu.bitzh.tp.action.ProduceRequestAction">
			<result name="success">/index.jsp</result>
			<result name="error">/test.jsp</result>
			<result name="input">/ProduceRequestFromVo.jsp</result>
		</action>
	
	</package>
	<package name="produce_show" namespace="/" extends="json-default">
		<action name="produce_show" class="cn.edu.bitzh.tp.action.ProduceShowAction">
			<result name="success">/ProduceMessageVo.jsp</result>
			<result name="error">/test.jsp</result>
		</action>
	</package>
	
</struts>