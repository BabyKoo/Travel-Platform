<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="default" namespace="/" extends="struts-default">
		<action name="action_*"
			class="cn.edu.bitzh.tp.action.ActionTest" method="{1}">
			<result type="redirect" name="success">
				<param name="location">/index.jsp</param>
			</result>
			<!-- 重点！Struts2.5使用通配符调用方法时，内部会验证是否允许访问该方法 -->
			<allowed-methods>test</allowed-methods>
		</action>
	</package>
	<package name="json-region" namespace="/"
		extends="json-default">
		<action name="region_*"
			class="cn.edu.bitzh.tp.action.RegionAction"
			method="{1}">
			<result type="json" />
			<allowed-methods>listChildren, listContinents, get</allowed-methods>
		</action>
		<action name="scenery_*" class="cn.edu.bitzh.tp.action.SceneryAction" method="{1}">
			<result type="redirect" name="success">
				<param name="location">/scenery/info2.jsp</param>
			</result>
			<allowed-methods>getSceneryDtl, getSceneryList, publishScenery</allowed-methods>
		</action>
	</package>
	
</struts>