<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="default" namespace="/" extends="struts-default">
		<action name="action_*"
			class="cn.edu.bitzh.tp.action.ActionTest" method="{1}">
			<result type="redirect" name="success">
				<param name="location">/index.jsp</param>
			</result>
			<!-- 重点！Struts2.5使用通配符调用方法时，内部会验证是否允许访问该方法 -->
			<allowed-methods>test</allowed-methods>
		</action>
	</package>
	<package name="json-region" namespace="/"
		extends="json-default">
		<action name="region"
			class="cn.edu.bitzh.tp.action.RegionAction">
			<result type="json" />
		</action>
	</package>
</struts>